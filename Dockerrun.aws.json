{
  "AWSEBDockerrunVersion": 2,
  "containerDefinitions": [
    {
      "name": "client",
      "image": "mjrode/audible-client",
      "hostname": "client",
      "essential": false
    },
    {
      "name": "api",
      "image": "mjrode/audible-api",
      "hostname": "api",
      "essential": false
    },
    {
      "name": "nginx",
      "image": "mjrode/audible-nginx",
      "hostname": "nginx",
      "essential": true,
      "portMappings": [{ "hostPort": 80, "containerPort": 80 }],
      "links": ["client", "api"]
    }
  ]
}
