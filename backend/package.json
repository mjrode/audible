{
  "name": "audible-backend",
  "version": "0.0.0",
  "description": "The backend API for a project build with Nest.js and React",
  "author": "Michael Rode",
  "license": "MIT",
  "scripts": {
    "prebuild": "rimraf dist",
    "build": "nest build",
    "lint": "tslint -p tsconfig.json -c tslint.json",
    "lint-fix": "tslint -p tsconfig.json -c tslint.json --fix",
    "db": "docker-compose up -d",
    "restart:db": "docker-compose rm -s -f && docker-compose up -d",
    "db:log": "npm run build && typeorm schema:log",
    "db:show": "npm run build && typeorm migration:show",
    "db:generate": "npm run build && typeorm migration:generate -n",
    "db:migrate": "npm run build && typeorm migration:run",
    "release": "semantic-release --debug",
    "start": "nest start --watch",
    "start:dev": "nest start --watch",
    "start:debug": "nest start --debug --watch",
    "start:prod": "node dist/main",
    "test": "jest --config ./test/jest-e2e.json",
    "test:watch": "jest --watch",
    "test:cov": "jest --coverage",
    "test:debug": "node --inspect-brk -r tsconfig-paths/register -r ts-node/register node_modules/.bin/jest --runInBand",
    "test:e2e": "jest --config ./test/jest-e2e.json",
    "tsc": "tsc"
  },
  "dependencies": {
    "@nestjs/common": "^6.11.7",
    "@nestjs/core": "^6.11.7",
    "@nestjs/jwt": "^6.1.1",
    "@nestjs/mongoose": "^6.3.1",
    "@nestjs/passport": "^6.2.0",
    "@nestjs/platform-express": "^6.11.7",
    "@nestjs/typeorm": "^6.3.1",
    "@typescript-eslint/eslint-plugin": "^2.22.0",
    "ajv": "^6.12.0",
    "auth0": "^2.23.0",
    "axios": "^0.19.2",
    "cheerio": "^1.0.0-rc.3",
    "dotenv": "^8.2.0",
    "es6-promisify": "^6.0.2",
    "eslint-plugin-jsx-a11y": "^6.2.3",
    "eslint-plugin-react": "^7.19.0",
    "eslint-plugin-react-hooks": "^1.7.0",
    "express-jwt": "^5.3.1",
    "googleapis": "^39.2.0",
    "jwks-rsa": "^1.7.0",
    "mongoose": "^5.9.2",
    "passport": "^0.4.1",
    "passport-jwt": "^4.0.0",
    "passport-local": "^1.0.0",
    "reflect-metadata": "^0.1.12",
    "rimraf": "^2.6.2",
    "rxjs": "^6.5.3",
    "transmission": "^0.4.10",
    "transmission-api": "0.0.1",
    "typeorm": "^0.2.24",
    "typeorm-fixtures-cli": "^1.3.7"
  },
  "devDependencies": {
    "@nestjs/cli": "^6.11.3",
    "@nestjs/schematics": "^6.7.0",
    "@nestjs/testing": "^6.7.1",
    "@types/auth0": "^2.20.0",
    "@types/cheerio": "^0.22.16",
    "@types/es6-promisify": "^6.0.0",
    "@types/express": "^4.17.1",
    "@types/express-jwt": "0.0.42",
    "@types/jasmine": "^3.3.4",
    "@types/jest": "^24.0.18",
    "@types/mongoose": "^5.7.3",
    "@types/node": "^12.7.5",
    "@types/passport-jwt": "^3.0.3",
    "@types/prettier": "^1.19.0",
    "@types/rimraf": "^2.0.3",
    "@types/supertest": "^2.0.5",
    "eslint": "^6.8.0",
    "eslint-config-airbnb-typescript": "^7.0.0",
    "eslint-config-prettier": "^6.10.0",
    "eslint-plugin-import": "^2.20.1",
    "eslint-plugin-jest": "^23.8.1",
    "eslint-plugin-prettier": "^3.1.2",
    "jest": "^25.1.0",
    "nodemon": "^1.18.3",
    "pre-commit": "^1.2.2",
    "prettier": "^1.14.2",
    "supertest": "^4.0.2",
    "ts-jest": "^24.1.0",
    "ts-loader": "^6.1.1",
    "ts-mockito": "^2.5.0",
    "ts-node": "^8.4.1",
    "tsconfig-paths": "^3.9.0",
    "tslint": "^5.20.0",
    "typescript": "^3.7.2",
    "webpack-node-externals": "^1.7.2"
  },
  "jest": {
    "moduleFileExtensions": [
      "js",
      "json",
      "ts"
    ],
    "rootDir": "src",
    "testRegex": ".spec.ts$",
    "transform": {
      "^.+\\.(t|j)s$": "ts-jest"
    },
    "coverageDirectory": "../coverage",
    "testEnvironment": "node"
  }
}
